{
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",

    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/typings/**/*.d.ts"
    ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true
  }
}
