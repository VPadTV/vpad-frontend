{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    //"noEmit": true,
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": ["src/typings", "node_modules/@types"],
    "types": ["vue"],
    "paths": {
      "@/*": ["./src/*"],
      "@assets": ["./src/assets"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/modules/shared/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@infra/*": ["src/infrastructure/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    }
  }
}
